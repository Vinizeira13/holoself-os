{
  "$schema": "https://raw.githubusercontent.com/nicholasrice/tauri/tauri-v2.2.0/crates/tauri-config-schema/schema.json",
  "productName": "HoloSelf OS",
  "version": "0.1.0",
  "identifier": "com.holoself.os",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "HoloSelf OS",
        "label": "main",
        "width": 560,
        "height": 720,
        "minWidth": 480,
        "minHeight": 600,
        "x": null,
        "y": null,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "dragDropEnabled": true,
        "shadow": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; connect-src 'self' https://api.cartesia.ai https://generativelanguage.googleapis.com https://api.open-meteo.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
